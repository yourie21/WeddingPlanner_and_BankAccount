<h3>Plan your Wedding</h3> <br>
    <a href="logout"><button>Log out</button></a> | 
    <a href="wedding"><button>Back to Wedding List</button></a>
    <br><br>

<!-- add the model class this form is related to -->
@model Wedding 
<form asp-action="process" asp-controller="Home" method="post">
<ul>
    <li>
    Bride's name:   <input type="text" asp-for="person1">
    <span asp-validation-for="person1"></span>
    </li>
    <li>
    Groom's name:  <input type="text" asp-for="person2">
    <span asp-validation-for="person2"></span>
    </li>

    <li>
    Address:  <input type="text" asp-for="address">
    <span asp-validation-for="address"></span>
    </li>

    <li>
    Wedding Date:  <input type="date" asp-for="date">
    <span asp-validation-for="date"></span>
    </li>
</ul>
<button class="btn waves-effect waves-light" type="submit" name="submit">Create</button>
</form>
