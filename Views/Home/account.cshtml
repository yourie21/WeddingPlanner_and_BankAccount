<h1>Welcome, @TempData["userName"]</h1>

<a href="logout"><button>Log out</button></a>
@{
    <h3> Current balance: @TempData["balance"]</h3>
}

<form asp-action="completeTransaction" asp-controller="Home">
    Deposit/Withdraw: <input type="number" step="0.01" placeholder="0.00" name="_amount">
    <br>
    <button class="btn btn-info" type="submit">Submit</button>
</form>
<table class="table">
    <tr>
     <th> Amount</th>
        <th> Date</th>
        <th> User id</th>
        <th> usertable's name</th>
        <th> usertable's email</th>
        <th> usertable's balance</th>
        </tr>
        @{
            foreach(var t in ViewBag.alltrans) {
        <tr>
            <td>@t.amount</td> 
            <td>@t.date</td>
            <td>@t.UserId</td>
            <td>@t.user.name</td>
            <td>@t.user.email</td>
            <td>@t.user.balance</td>
        </tr>
        }
    }

</table>

